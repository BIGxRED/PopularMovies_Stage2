<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/title_background"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_movie_poster"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

        <!--Movie title-->
        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="N/A"
            style="@style/MovieHeader"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_background"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_background"
            app:layout_constraintRight_toRightOf="@+id/title_background"/>

        <!--Movie poster-->
        <ImageView
            android:id="@+id/iv_movie_poster"
            android:layout_width="160dp"
            android:layout_height="240dp"
            style="@style/MoviePoster"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/separator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_background"
            android:layout_marginBottom="16dp"/>

        <!--Movie release date-->
        <TextView
            android:id="@+id/tv_movie_release_date"
            android:text="N/A"
            style="@style/MovieStats"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_movie_poster"
            app:layout_constraintTop_toBottomOf="@+id/title_background"
            app:layout_constraintLeft_toRightOf="@+id/iv_movie_poster"/>

        <!--Vote average and vote counts-->
        <TextView
            android:id="@+id/tv_movie_vote_results"
            android:text="N/A"
            style="@style/MovieStats"
            android:layout_height="0dp"
            android:layout_width="0dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="33dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_release_date"
            android:layout_marginRight="33dp"/>

        <!--Horizontal separator-->
        <View
            android:id="@+id/separator"
            style="@style/HorizontalDivider"
            android:layout_height="0dp"
            android:layout_width="0dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/tv_overview_heading"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            app:layout_constraintRight_toRightOf="@+id/tv_overview_heading"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_movie_poster"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_movie_poster"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"/>

        <!--Overview heading-->
        <TextView
            android:id="@+id/tv_overview_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/movie_overview_header"
            style="@style/MovieHeader"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/tv_movie_overview"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <!--Movie overview-->
        <TextView
            android:id="@+id/tv_movie_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="N/A"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/tv_overview_heading"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_overview_heading"/>


    </android.support.constraint.ConstraintLayout>

</ScrollView>
